extends layouts/sidebar_layout.pug

block main
    section(class="w-full max-w-3xl m-auto my-8 bg-white rounded-lg shadow-md")
        header(class="p-4 border-b-2 border-gray-200 antialiased")
            h1(class="text-gray-800 text-xl") Settings

        form(method="POST" id="settings-form")

            section(class="w-2/3")

                // Calendar ID
                div(class="w-full p-8 block")
                    label(class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2 antialiased")
                        | Calendar ID

                    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 " +
                                "leading-tight focus:outline-none focus:bg-white" type="text" id="calendar-id"
                          placeholder="Primary")

            // Save Button
            div(class="w-full flex")
                div(class="w-full px-8 pb-8")
                    button(class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 " +
                                 "rounded focus:outline-none focus:shadow-outline tracking-wide " +
                                 "ease-in antialiased" type="submit") Save Settings


block scripts
    script(src="../../temp/settings.js")
